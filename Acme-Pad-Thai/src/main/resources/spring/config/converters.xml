<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
		<bean class="converters.SponsorToStringConverter" />
		<bean class="converters.StringToSponsorConverter" />
		
		<bean class="converters.CampaignToStringConverter" />
		<bean class="converters.StringToCampaignConverter" />
		
		<bean class="converters.BillToStringConverter" />
		<bean class="converters.StringToBillConverter" />
		
		<bean class="converters.ContestToStringConverter" />
		<bean class="converters.StringToContestConverter" />
		
		<bean class="converters.RecipeCopyToStringConverter" />
		<bean class="converters.StringToRecipeCopyConverter" />
		
		<bean class="converters.FeeToStringConverter" />
		<bean class="converters.StringToFeeConverter" />
		
		<bean class="converters.SocialIdentityToStringConverter" />
		<bean class="converters.StringToSocialIdentityConverter" />
	</util:list>

</beans>